    <style name="Theme.Nightendar_Light" parent="Theme.Nightendar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:textColor">@color/fondo_negro</item>
        <item name="android:colorBackground">@color/blanco</item>
    </style>

</resources>